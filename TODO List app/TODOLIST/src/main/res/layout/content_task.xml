<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.karpurus.myapplication.TaskActivity"
    tools:showIn="@layout/activity_task">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="30sp"
        android:background="@drawable/button_custom"
 />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="15sp"
        android:background="@drawable/button_custom"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/delete" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:id="@+id/itemNameAfterRetrival"
        android:layout_below="@+id/update"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/update"
        android:layout_alignEnd="@+id/update"
        android:textColor="#1f1d1d"
        android:textSize="22dp" />

    <TextView
        android:layout_width = "100dp"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:id="@+id/itemPriorityAfterRetrieval"
        android:layout_marginTop="10dp"
        android:textColor="#1f1d1d"
        android:textSize="22dp"
        android:layout_below="@+id/itemNameAfterRetrival"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/itemNameAfterRetrival"
        android:layout_alignEnd="@+id/itemNameAfterRetrival" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:id="@+id/itemDateAfterRetrieval"
        android:textColor="#1f1d1d"
        android:textSize="20dp"
        android:layout_below="@+id/itemPriorityAfterRetrieval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
